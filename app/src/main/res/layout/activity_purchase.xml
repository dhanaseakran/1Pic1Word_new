<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#80000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#29b6f6"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/titlerl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <nithra.word.game.onepiconeword.extra.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/lrtbp_15"
                android:layout_marginBottom="@dimen/lrtbp_15"
                android:layout_marginLeft="15dp"
                android:text="PURCHASE COINS"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:src="@drawable/remove_letter_icon" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">

            <nithra.word.game.onepiconeword.extra.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/txt_10"
                android:text="Purchase any package to get"
                android:textColor="#4b7ac6"
                android:textSize="18sp"
                android:textStyle="bold" />

            <nithra.word.game.onepiconeword.extra.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text=" MORE COINS!!"
                android:textColor="#D50000"
                android:textSize="18sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/prs1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wh_45"
                android:layout_margin="@dimen/txt_10"
                android:background="@drawable/pur_1k" />

            <ImageView
                android:id="@+id/prs2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wh_45"
                android:layout_margin="@dimen/txt_10"
                android:background="@drawable/pur_2_5k" />

            <ImageView
                android:id="@+id/prs3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wh_45"
                android:layout_margin="@dimen/txt_10"
                android:background="@drawable/pur_5k" />




        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/lrtbp_15">
            <ImageView
                android:id="@+id/cancel"
                android:layout_width="@dimen/wh_80"
                android:layout_height="@dimen/wh_45"
                android:layout_centerHorizontal="true"
                android:background="@drawable/pur_cancel"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/remove_ads_img"
                android:layout_width="@dimen/wh_50"
                android:layout_height="@dimen/wh_50"
                android:background="@drawable/remove_ads"/>
            <nithra.word.game.onepiconeword.extra.MyTextView
                android:id="@+id/ad_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_toRightOf="@+id/remove_ads_img"
                android:text="Any purchase will remove ads"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <!--        <android.support.v7.widget.CardView
                    android:id="@+id/cancel"
