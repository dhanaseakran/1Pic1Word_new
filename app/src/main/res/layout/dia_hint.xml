<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/txt_10"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wh_70"
            android:background="@drawable/dia_background_top">

            <nithra.word.game.onepiconeword.extra.MyTextView
                android:id="@+id/hint_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/lrtbp_15"
                android:text="HINT"
                android:textColor="#000"
                android:textSize="@dimen/txt_20" />

            <ImageView
                android:id="@+id/hint_close_img"
                android:layout_width="@dimen/wh_35"
                android:layout_height="@dimen/wh_35"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/txt_10"
                android:background="@drawable/remove_letter_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wh_300"
            android:background="@drawable/dia_background_bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/lrtbp_15"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/word_sollution_lay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh_40"
                    android:layout_margin="@dimen/lrtbp_5"
                    android:background="@drawable/dia_button_back">

                    <ImageView
                        android:layout_width="@dimen/txt_25"
                        android:layout_height="@dimen/txt_25"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/txt_10"
                        android:background="@drawable/solution_icon" />

                    <nithra.word.game.onepiconeword.extra.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/wh_50"
                        android:gravity="center_horizontal"
                        android:text="SOLUTION"
                        android:textColor="#ed2121"
                        android:textSize="@dimen/txt_18" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/word_hint_lay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh_40"
                    android:layout_margin="@dimen/lrtbp_5"
                    android:background="@drawable/dia_button_back">

                    <ImageView
                        android:layout_width="@dimen/txt_25"
                        android:layout_height="@dimen/txt_25"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/txt_10"
                        android:background="@drawable/wordspeach" />

                    <nithra.word.game.onepiconeword.extra.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/wh_50"
                        android:gravity="center_horizontal"
                        android:text="WORD PRONOUNCE"
                        android:textColor="#ed2121"
                        android:textSize="@dimen/txt_18" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/letter_hint_lay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh_40"
                    android:layout_margin="@dimen/lrtbp_5"
                    android:background="@drawable/dia_button_back">

                    <ImageView
                        android:layout_width="@dimen/txt_25"
                        android:layout_height="@dimen/txt_25"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/txt_10"
                        android:background="@drawable/letterspeach" />

                    <nithra.word.game.onepiconeword.extra.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/wh_50"
                        android:gravity="center_horizontal"
                        android:text="LETTER PRONOUNCE"
                        android:textColor="#ed2121"
                        android:textSize="@dimen/txt_18" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/random_hint_lay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh_40"
                    android:layout_margin="@dimen/lrtbp_5"
                    android:background="@drawable/dia_button_back">

                    <ImageView
                        android:layout_width="@dimen/txt_25"
                        android:layout_height="@dimen/txt_25"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/txt_10"
                        android:background="@drawable/writeletter" />

                    <nithra.word.game.onepiconeword.extra.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/wh_50"
                        android:gravity="center_horizontal"
                        android:text="RANDOM LETTER"
                        android:textColor="#ed2121"
                        android:textSize="@dimen/txt_18" />


                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>