                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/ans_txt5"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/txt_answer_bg"
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/ans_txt6"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/txt_answer_bg"
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/ans_txt7"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/txt_answer_bg"
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/ans_txt8"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/txt_answer_bg"
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/ans_txt9"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/txt_answer_bg"
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/ans_txt10"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/txt_answer_bg"
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/ans_txt11"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/txt_answer_bg"
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/ans_txt12"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/txt_answer_bg"
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/info_lay"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#73d1e9"
            android:visibility="gone">

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qus_txt1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/txt_answer_bg"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/qus_txt2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/txt_answer_bg"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/qus_txt3"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/txt_answer_bg"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/qus_txt4"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/txt_answer_bg"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/qus_txt5"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/txt_answer_bg"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/qus_txt6"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/txt_answer_bg"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="#000"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qus_txt7"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/txt_answer_bg"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/qus_txt8"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/txt_answer_bg"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/qus_txt9"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/txt_answer_bg"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/qus_txt10"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/txt_answer_bg"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="#000"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/qus_txt11"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/txt_answer_bg"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/qus_txt12"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/txt_answer_bg"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="#000"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/go_game_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/backward_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/setting_icon" />

        <TextView
            android:id="@+id/count_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="18dp"
            android:text="0/100"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/forward_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/setting_icon" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/zoom_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="invisible">
        <ImageView
            android:id="@+id/expanded_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30dp"
            />
    </RelativeLayout>


</RelativeLayout>