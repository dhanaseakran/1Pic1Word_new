<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Home_lay"
    android:orientation="vertical"
    android:background="@drawable/main_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/play_btn_lay"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerInParent="true"
            android:background="#ecdf8a">

            <ImageView
                android:id="@+id/game_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:visibility="visible" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/hint_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/solve_ans"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/solve"/>
            <ImageView
                android:id="@+id/delete_wrong"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/remove_letter_icon"/>
            <ImageView
                android:id="@+id/random_hint"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/hint_icon"/>
            <ImageView
                android:id="@+id/special_hint"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/special_hint"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/store_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:id="@+id/setting_img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/setting_icon"/>
            <ImageView
                android:id="@+id/favorite_img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/setting_off"/>
            <ImageView
                android:id="@+id/store_img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/setting_icon"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/play_btn_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/go_game_lay"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ans_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ans_txt1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/txt_answer_bg"
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ans_txt2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/txt_answer_bg"
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/ans_txt3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/txt_answer_bg"
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/ans_txt4"
                android:layout_width="45dp"
