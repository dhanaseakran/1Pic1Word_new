<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/txt_10"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wh_70"
            android:background="@drawable/dia_background_top">

            <nithra.word.game.onepiconeword.extra.MyTextView
                android:id="@+id/credit_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/lrtbp_15"
                android:text="GET CREDIT"
                android:textColor="#000"
                android:textSize="@dimen/txt_20" />

            <ImageView
                android:id="@+id/eran_close_img"
                android:layout_width="@dimen/wh_35"
                android:layout_height="@dimen/wh_35"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/txt_10"
                android:background="@drawable/remove_letter_icon" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dia_background_bottom">

            <nithra.word.game.onepiconeword.extra.MyTextView
                android:id="@+id/credit_content_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/lrtbp_15"
                android:gravity="center_horizontal"
                android:text="Below sharing provides additional coins"
                android:textColor="#000"
                android:textSize="@dimen/txt_18" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/credit_content_txt"
                android:layout_marginLeft="@dimen/lrtbp_5"
                android:layout_marginRight="@dimen/lrtbp_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/txt_25"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/fb_credit_lay"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_50"
                        android:layout_margin="@dimen/lrtbp_5"
                        android:background="@drawable/dia_button_back"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="@dimen/wh_35"
                            android:layout_height="@dimen/wh_35"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/txt_10"
                            android:background="@drawable/dia_fb" />

                        <ImageView
                            android:layout_width="@dimen/wh_35"
                            android:layout_height="@dimen/wh_35"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/txt_10"
                            android:background="@drawable/play_coin" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/wh_50"
                            android:layout_marginRight="@dimen/wh_50"
                            android:orientation="vertical">

                            <nithra.word.game.onepiconeword.extra.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="INVITE FRIENDS"
                                android:textColor="#ed2121"
                                android:textSize="@dimen/txt_18" />

                            <nithra.word.game.onepiconeword.extra.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:singleLine="true"
                                android:text="(10 Coins for each person)"
                                android:textColor="#ed2121" />

                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/purchass_credit_lay"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_40"
                        android:layout_margin="@dimen/lrtbp_5"
                        android:background="@drawable/dia_button_back">

                        <ImageView
                            android:layout_width="@dimen/txt_25"
                            android:layout_height="@dimen/txt_25"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/txt_10"
                            android:background="@drawable/purchase_icon" />




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/wh_50"
                            android:layout_marginRight="@dimen/wh_50"
                            android:orientation="vertical">

                            <nithra.word.game.onepiconeword.extra.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="PURCHASE"
                                android:textColor="#ed2121"
                                android:textSize="@dimen/txt_16" />

                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/reward_credit_lay"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_40"
                        android:layout_margin="@dimen/lrtbp_5"
                        android:background="@drawable/dia_button_back">

                        <ImageView
                            android:layout_width="@dimen/txt_25"
                            android:layout_height="@dimen/txt_25"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/txt_10"
                            android:background="@drawable/reward_video_icon" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/wh_45"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/pract_pading"
                            android:layout_weight="0.33"
                            android:background="@drawable/boder_red"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/lrtbp_5"
                                android:background="@drawable/play_coin" />

                            <nithra.word.game.onepiconeword.extra.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/lrtbp_5"
                                android:layout_marginRight="@dimen/lrtbp_5"
                                android:gravity="center"
                                android:text="50"
                                android:textAppearance="?android:textAppearanceMedium"
                                android:textColor="#333149"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/wh_50"
                            android:layout_marginRight="@dimen/wh_50"
                            android:orientation="vertical">

                            <nithra.word.game.onepiconeword.extra.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="REWARD VIDEO"
                                android:textColor="#ed2121"
                                android:textSize="@dimen/txt_16" />

                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/wa_credit_lay"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_40"
                        android:layout_margin="@dimen/lrtbp_5"
                        android:background="@drawable/dia_button_back">

                        <ImageView
                            android:layout_width="@dimen/txt_25"
                            android:layout_height="@dimen/txt_25"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/txt_10"
                            android:background="@drawable/dia_whatsapp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/wh_45"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/pract_pading"
                            android:layout_weight="0.33"
                            android:background="@drawable/boder_red"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/lrtbp_5"
                                android:background="@drawable/play_coin" />

                            <nithra.word.game.onepiconeword.extra.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/lrtbp_5"
                                android:layout_marginRight="@dimen/lrtbp_5"
                                android:gravity="center"
                                android:text="10"
                                android:textAppearance="?android:textAppearanceMedium"
                                android:textColor="#333149"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/wh_50"
                            android:layout_marginRight="@dimen/wh_50"
                            android:orientation="vertical">

                            <nithra.word.game.onepiconeword.extra.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="WHATS APP"
                                android:textColor="#ed2121"
                                android:textSize="@dimen/txt_16" />

                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/gplus_credit_lay"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_40"
                        android:layout_margin="@dimen/lrtbp_5"
                        android:background="@drawable/dia_button_back">

                        <ImageView
                            android:layout_width="@dimen/txt_25"
                            android:layout_height="@dimen/txt_25"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/txt_10"
                            android:background="@drawable/gmail" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/wh_45"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/pract_pading"
                            android:layout_weight="0.33"
                            android:background="@drawable/boder_red"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/lrtbp_5"
                                android:background="@drawable/play_coin" />

                            <nithra.word.game.onepiconeword.extra.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/lrtbp_5"
                                android:layout_marginRight="@dimen/lrtbp_5"
                                android:gravity="center"
                                android:text="10"
                                android:textAppearance="?android:textAppearanceMedium"
                                android:textColor="#333149"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/wh_50"
                            android:layout_marginRight="@dimen/wh_50"
                            android:orientation="vertical">

                            <nithra.word.game.onepiconeword.extra.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="G MAIL"
                                android:textColor="#ed2121"
                                android:textSize="@dimen/txt_18" />

                        </LinearLayout>


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/coin_lay"
                        android:layout_width="@dimen/wh_80"
                        android:layout_height="@dimen/wh_45"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/pract_pading"
                        android:layout_weight="0.33"
                        android:background="@drawable/boder_red"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/lrtbp_5"
                            android:background="@drawable/play_coin" />

                        <nithra.word.game.onepiconeword.extra.MyTextView
                            android:id="@+id/coins_txt_earn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/lrtbp_5"
                            android:layout_marginRight="@dimen/lrtbp_5"
                            android:gravity="center"
                            android:text="0"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="#333149"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>