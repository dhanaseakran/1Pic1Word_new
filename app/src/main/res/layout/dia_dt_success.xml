<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/txt_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wh_70"
            android:background="@drawable/dia_background_top">

            <nithra.word.game.onepiconeword.extra.MyTextView
                android:id="@+id/dt_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Daily Game"
                android:textColor="#000"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/lrtbp_15"
                android:textSize="@dimen/txt_20" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wh_150"
            android:background="@drawable/dia_background_bottom">

            <nithra.word.game.onepiconeword.extra.MyTextView
                android:id="@+id/dt_content_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/txt_10"
                android:text="Daily game successfully completed"
                android:gravity="center_horizontal"
                android:textColor="#000"
                android:textSize="@dimen/txt_18" />

            <nithra.word.game.onepiconeword.extra.MyTextView
                android:id="@+id/dia_done_dt"
                android:layout_width="@dimen/wh_80"
                android:layout_height="@dimen/wh_40"
                android:layout_weight="1"
                android:layout_margin="@dimen/lrtbp_15"
                android:background="@drawable/dia_done"
                android:layout_centerHorizontal="true"
                android:text="Ok"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textSize="@dimen/txt_16"
                android:textColor="#fff"/>

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>