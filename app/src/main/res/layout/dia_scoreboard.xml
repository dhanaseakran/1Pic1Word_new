<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/score_ad_lay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wh_240"
            android:layout_centerInParent="true"
            android:background="@drawable/score_bg">

            <nithra.word.game.onepiconeword.extra.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:text="FANTASTIC"
                android:textColor="#000"
                android:textSize="@dimen/txt_20" />

            <nithra.word.game.onepiconeword.extra.MyTextView
                android:id="@+id/aaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/txt_24"
                android:text="YOU DID A GOOD JOB...!"
                android:textColor="#e62323"
                android:textSize="@dimen/txt_16" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/lays"
                android:layout_below="@+id/aaa"
                android:background="@drawable/score_center_bg">

                <RelativeLayout
                    android:id="@+id/share_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/txt_10">

                    <nithra.word.game.onepiconeword.extra.MyTextView
                        android:id="@+id/aaa1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/wh_40"
                        android:text="SHARE NOW"
                        android:textColor="#f11414"
                        android:textSize="@dimen/txt_16" />

                    <nithra.word.game.onepiconeword.extra.MyTextView
                        android:id="@+id/aaa12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/aaa1"
                        android:layout_marginLeft="@dimen/txt_10"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:text="TO GET MORE COINS"
                        android:textColor="#000"
                        android:textSize="@dimen/txt_12"
                      />



                    <LinearLayout
                        android:id="@+id/ssss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/aaa12"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/score_fb_img"
                            android:layout_width="@dimen/wh_35"
                            android:layout_height="@dimen/wh_35"
                            android:layout_margin="@dimen/lrtbp_5"
                            android:background="@drawable/dia_fb"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/score_wa_img"
                            android:layout_width="@dimen/wh_35"
                            android:layout_height="@dimen/wh_35"
                            android:layout_margin="@dimen/lrtbp_5"
                            android:background="@drawable/whatapp_icon" />

                        <ImageView
                            android:id="@+id/score_twitter_img"
                            android:layout_width="@dimen/wh_35"
                            android:layout_height="@dimen/wh_35"
                            android:layout_margin="@dimen/lrtbp_5"
                            android:background="@drawable/twitter_icon" />

                        <ImageView
                            android:id="@+id/score_gplus_img"
                            android:layout_width="@dimen/wh_35"
                            android:layout_height="@dimen/wh_35"
                            android:layout_margin="@dimen/lrtbp_5"
                            android:background="@drawable/gmail" />

                    </LinearLayout>



                </RelativeLayout>

                <View
                    android:layout_width="@dimen/wh_2"
                    android:layout_height="match_parent"
                    android:background="#000"
                    android:textSize="@dimen/txt_10"
                    android:layout_marginTop="@dimen/wh_35"
                    android:layout_marginBottom="@dimen/wh_35"
                    android:layout_marginLeft="@dimen/txt_10"
                  android:layout_toRightOf="@+id/share_lay"
                    android:layout_marginRight="@dimen/wh_50"/>

                <RelativeLayout
                    android:id="@+id/ggg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/txt_10">
                    <ImageView
                        android:layout_width="@dimen/wh_150"
                        android:layout_height="@dimen/wh_120"
                        android:background="@drawable/score_board_img" />

                    <TextView
                        android:id="@+id/score_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/lrtbp_15"
                        android:text="Score"
                        android:textSize="@dimen/txt_18"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/comcoin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/pract_pading"
                        android:layout_weight="0.33"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/pract_pading"
                        android:text="100"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/coin1"
                    android:layout_width="@dimen/txt_25"
                    android:layout_height="@dimen/txt_25"
                    android:layout_marginBottom="@dimen/pract_pading"
                    android:layout_marginLeft="@dimen/list_all"
                    android:background="@drawable/coinboard"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/coin2"
                    android:layout_width="@dimen/txt_25"
                    android:layout_height="@dimen/txt_25"
                    android:layout_marginBottom="@dimen/pract_pading"
                    android:layout_marginLeft="@dimen/list_all"
                    android:layout_toRightOf="@+id/coin1"
                    android:background="@drawable/coinboard"
                    android:visibility="invisible" />
                <TextView
                    android:id="@+id/coin3"
                    android:layout_width="@dimen/txt_25"
                    android:layout_height="@dimen/txt_25"
                    android:layout_marginBottom="@dimen/pract_pading"
                    android:layout_marginLeft="@dimen/list_all"
                    android:layout_toRightOf="@+id/coin2"
                    android:background="@drawable/coinboard"
                    android:visibility="invisible" />
                <TextView
                    android:id="@+id/coin4"
                    android:layout_width="@dimen/txt_25"
                    android:layout_height="@dimen/txt_25"
                    android:layout_marginBottom="@dimen/pract_pading"
                    android:layout_marginLeft="@dimen/list_all"
                    android:layout_toRightOf="@+id/coin3"
                    android:background="@drawable/coinboard"
                    android:visibility="invisible" />
                <TextView
                    android:id="@+id/coin5"
                    android:layout_width="@dimen/txt_25"
                    android:layout_height="@dimen/txt_25"
                    android:layout_marginBottom="@dimen/pract_pading"
                    android:layout_marginLeft="@dimen/list_all"
                    android:layout_toRightOf="@+id/coin4"
                    android:background="@drawable/coinboard"
                    android:visibility="invisible" />
                <TextView
                    android:id="@+id/coin6"
                    android:layout_width="@dimen/txt_25"
                    android:layout_height="@dimen/txt_25"
                    android:layout_marginBottom="@dimen/pract_pading"
                    android:layout_marginLeft="@dimen/list_all"
                    android:layout_toRightOf="@+id/coin5"
                    android:background="@drawable/coinboard"
                    android:visibility="invisible" />
                <TextView
                    android:id="@+id/coin7"
                    android:layout_width="@dimen/txt_25"
                    android:layout_height="@dimen/txt_25"
                    android:layout_marginBottom="@dimen/pract_pading"
                    android:layout_marginLeft="@dimen/list_all"
                    android:layout_toRightOf="@+id/coin6"
                    android:background="@drawable/coinboard"
                    android:visibility="invisible" />
                <TextView
                    android:id="@+id/coin8"
                    android:layout_width="@dimen/txt_25"
                    android:layout_height="@dimen/txt_25"
                    android:layout_marginBottom="@dimen/pract_pading"
                    android:layout_marginLeft="@dimen/list_all"
                    android:layout_toRightOf="@+id/coin7"
                    android:background="@drawable/coinboard"
                    android:visibility="invisible" />
                <TextView
                    android:id="@+id/coin9"
                    android:layout_width="@dimen/txt_25"
                    android:layout_height="@dimen/txt_25"
                    android:layout_marginBottom="@dimen/pract_pading"
                    android:layout_marginLeft="@dimen/list_all"
                    android:layout_toRightOf="@+id/coin8"
                    android:background="@drawable/coinboard"
                    android:visibility="invisible" />
                <TextView
                    android:id="@+id/coin10"
                    android:layout_width="@dimen/txt_25"
                    android:layout_height="@dimen/txt_25"
                    android:layout_marginBottom="@dimen/pract_pading"
                    android:layout_marginLeft="@dimen/list_all"
                    android:layout_toRightOf="@+id/coin9"
                    android:background="@drawable/coinboard"
                    android:visibility="invisible" />

            </RelativeLayout>


            <nithra.word.game.onepiconeword.extra.MyTextView
                android:id="@+id/continue_txt"
                android:layout_width="@dimen/wh_150"
                android:layout_height="@dimen/wh_35"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/score_btn"
                android:gravity="center"
                android:text="CONTINUE"
                android:textColor="#000"
                android:visibility="invisible"
                android:textSize="@dimen/txt_20" />

        </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/score_ad_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:visibility="gone" />

</RelativeLayout>