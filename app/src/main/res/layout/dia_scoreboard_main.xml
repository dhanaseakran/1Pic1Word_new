<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"

        android:background="@drawable/dia_score_background">

        <LinearLayout
            android:id="@+id/score_title_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <nithra.word.game.onepiconeword.extra.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/wh_40"
                android:text="FANTASTIC"
                android:textColor="#000"
                android:textSize="@dimen/txt_25" />

            <nithra.word.game.onepiconeword.extra.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="YOU DID A GOOD JOB...!"
                android:textColor="#e62323"
                android:layout_marginTop="@dimen/txt_25"
                android:textSize="@dimen/txt_20" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/lrtbp_15">

                <ImageView
                    android:layout_width="@dimen/wh_70"
                    android:layout_height="@dimen/wh_70"
                    android:background="@drawable/score_star" />

                <TextView
                    android:id="@+id/comcoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/pract_pading"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:padding="@dimen/pract_pading"
                    android:text="100"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#000"
                    android:textStyle="bold" />
            </RelativeLayout>


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/lays"
            android:layout_above="@+id/score_ad_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/score_title_lay"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                android:id="@+id/coin1"
                android:layout_width="@dimen/pract_hight"
                android:layout_height="@dimen/pract_hight"
                android:layout_marginBottom="@dimen/pract_pading"
                android:layout_marginLeft="@dimen/list_all"
                android:background="@drawable/coinboard"
                android:visibility="invisible" />


            <TextView
                android:id="@+id/coin2"
                android:layout_width="@dimen/pract_hight"
                android:layout_height="@dimen/pract_hight"
                android:layout_marginBottom="@dimen/pract_pading"
                android:layout_marginLeft="@dimen/list_all"
                android:layout_toRightOf="@+id/coin1"
                android:background="@drawable/coinboard"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="@dimen/frame_liner_textsize"
                android:textStyle="bold"
                android:typeface="sans"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/coin3"
                android:layout_width="@dimen/pract_hight"
                android:layout_height="@dimen/pract_hight"
                android:layout_marginBottom="@dimen/pract_pading"
                android:layout_marginLeft="@dimen/list_all"
                android:layout_toRightOf="@+id/coin2"
                android:background="@drawable/coinboard"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="@dimen/frame_liner_textsize"
                android:textStyle="bold"
                android:typeface="sans"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/coin4"
                android:layout_width="@dimen/pract_hight"
                android:layout_height="@dimen/pract_hight"
                android:layout_marginBottom="@dimen/pract_pading"
                android:layout_marginLeft="@dimen/list_all"
                android:layout_toRightOf="@+id/coin3"
                android:background="@drawable/coinboard"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="@dimen/frame_liner_textsize"
                android:textStyle="bold"
                android:typeface="sans"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/coin5"
                android:layout_width="@dimen/pract_hight"
                android:layout_height="@dimen/pract_hight"
                android:layout_marginBottom="@dimen/pract_pading"
                android:layout_marginLeft="@dimen/list_all"
                android:layout_toRightOf="@+id/coin4"
                android:background="@drawable/coinboard"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="@dimen/frame_liner_textsize"
                android:textStyle="bold"
                android:typeface="sans"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/coin6"
                android:layout_width="@dimen/pract_hight"
                android:layout_height="@dimen/pract_hight"
                android:layout_below="@+id/coin1"
                android:layout_marginBottom="@dimen/pract_pading"
                android:layout_marginLeft="@dimen/list_all"
                android:background="@drawable/coinboard"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="@dimen/frame_liner_textsize"
                android:textStyle="bold"
                android:typeface="sans"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/coin7"
                android:layout_width="@dimen/pract_hight"
                android:layout_height="@dimen/pract_hight"
                android:layout_below="@+id/coin1"
                android:layout_marginBottom="@dimen/pract_pading"
                android:layout_marginLeft="@dimen/list_all"
                android:layout_toRightOf="@+id/coin6"
                android:background="@drawable/coinboard"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="@dimen/frame_liner_textsize"
                android:textStyle="bold"
                android:typeface="sans"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/coin8"
                android:layout_width="@dimen/pract_hight"
                android:layout_height="@dimen/pract_hight"
                android:layout_below="@+id/coin1"
                android:layout_marginBottom="@dimen/pract_pading"
                android:layout_marginLeft="@dimen/list_all"
                android:layout_toRightOf="@+id/coin7"
                android:background="@drawable/coinboard"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="@dimen/frame_liner_textsize"
                android:textStyle="bold"
                android:typeface="sans"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/coin9"
                android:layout_width="@dimen/pract_hight"
                android:layout_height="@dimen/pract_hight"
                android:layout_below="@+id/coin1"
                android:layout_marginBottom="@dimen/pract_pading"
                android:layout_marginLeft="@dimen/list_all"
                android:layout_toRightOf="@+id/coin8"
                android:background="@drawable/coinboard"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="@dimen/frame_liner_textsize"
                android:textStyle="bold"
                android:typeface="sans"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/coin10"
                android:layout_width="@dimen/pract_hight"
                android:layout_height="@dimen/pract_hight"
                android:layout_below="@+id/coin1"
                android:layout_marginBottom="@dimen/pract_pading"
                android:layout_marginLeft="@dimen/list_all"
                android:layout_toRightOf="@+id/coin9"
                android:background="@drawable/coinboard"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="@dimen/frame_liner_textsize"
                android:textStyle="bold"
                android:typeface="sans"
                android:visibility="invisible" />
            </RelativeLayout>



        </RelativeLayout>
        <LinearLayout
            android:layout_above="@+id/share_lay"
            android:id="@+id/score_ad_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            />

        <RelativeLayout
            android:id="@+id/share_lay"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_above="@+id/continue_txt"
            android:layout_marginBottom="@dimen/lrtbp_15"
            android:layout_marginLeft="@dimen/txt_25"
            android:layout_marginRight="@dimen/txt_25"
            android:layout_marginTop="@dimen/txt_10"
            android:background="@drawable/score_share">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/score_fb_img"
                    android:layout_width="@dimen/wh_35"
                    android:layout_height="@dimen/wh_35"
                    android:layout_margin="@dimen/lrtbp_5"
                    android:visibility="gone"
                    android:background="@drawable/dia_fb" />

                <ImageView
                    android:id="@+id/score_twitter_img"
                    android:layout_width="@dimen/wh_35"
                    android:layout_height="@dimen/wh_35"
                    android:layout_margin="@dimen/lrtbp_5"
                    android:background="@drawable/dia_twitter" />

                <ImageView
                    android:id="@+id/score_wa_img"
                    android:layout_width="@dimen/wh_35"
                    android:layout_height="@dimen/wh_35"
                    android:layout_margin="@dimen/lrtbp_5"
                    android:background="@drawable/dia_whatsapp" />

                <ImageView
                    android:id="@+id/score_gplus_img"
                    android:layout_width="@dimen/wh_35"
                    android:layout_height="@dimen/wh_35"
                    android:layout_margin="@dimen/lrtbp_5"
                    android:background="@drawable/dia_gplus" />

            </LinearLayout>


        </RelativeLayout>

        <nithra.word.game.onepiconeword.extra.MyTextView
            android:id="@+id/continue_txt"
            android:layout_width="@dimen/wh_150"
            android:layout_height="@dimen/wh_40"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/wh_35"
            android:background="@drawable/score_btn"
            android:gravity="center"
            android:text="CONTINUE"
            android:textColor="#000"
            android:textSize="@dimen/txt_20" />


    </RelativeLayout>

</RelativeLayout>