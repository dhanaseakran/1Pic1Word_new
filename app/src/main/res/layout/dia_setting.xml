<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/txt_10"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wh_70"
            android:background="@drawable/dia_background_top">

            <nithra.word.game.onepiconeword.extra.MyTextView
                android:id="@+id/setting_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/lrtbp_15"
                android:text="SETTINGS"
                android:textColor="#000"
                android:textSize="@dimen/txt_20" />

            <ImageView
                android:id="@+id/setting_close_img"
                android:layout_width="@dimen/wh_35"
                android:layout_height="@dimen/wh_35"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/txt_10"
                android:background="@drawable/remove_letter_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wh_300"
            android:background="@drawable/dia_background_bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/lrtbp_15"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/exit_img"
                    android:layout_width="@dimen/wh_70"
                    android:layout_height="@dimen/wh_70"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/setting_icon" />

                <RelativeLayout
                    android:id="@+id/pronounce_lay"
                    android:layout_width="match_parent"


                    android:layout_height="@dimen/wh_50"
                    android:layout_margin="@dimen/lrtbp_5"
                    android:background="@drawable/dia_button_back">

                    <nithra.word.game.onepiconeword.extra.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="PRONUNCIATION"
                        android:textColor="#ed2121"
                        android:textSize="@dimen/txt_18" />

                    <ImageView
                        android:id="@+id/pronun_toogle"
                        android:layout_width="@dimen/txt_16"
                        android:layout_height="@dimen/wh_35"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/txt_10"
                        android:background="@drawable/setting_off" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/sound_lay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh_50"
                    android:layout_marginLeft="@dimen/lrtbp_5"
                    android:layout_marginRight="@dimen/lrtbp_5"
                    android:layout_marginTop="@dimen/txt_25"
                    android:background="@drawable/dia_button_back">

                    <nithra.word.game.onepiconeword.extra.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="SOUND"
                        android:textColor="#ed2121"
                        android:textSize="@dimen/txt_18" />

                    <ImageView
                        android:id="@+id/sound_toogle"
                        android:layout_width="@dimen/txt_16"
                        android:layout_height="@dimen/wh_35"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/txt_10"
                        android:background="@drawable/setting_off" />

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>