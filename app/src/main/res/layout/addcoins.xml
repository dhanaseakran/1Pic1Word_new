<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#80000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wh_350"
        android:layout_marginBottom="@dimen/txt_25"
        android:layout_marginTop="@dimen/txt_25"
        android:background="@drawable/dia_background"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <nithra.word.game.onepiconeword.extra.MyTextView
            android:id="@+id/wpro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="SETTINGS"
            android:layout_marginTop="@dimen/txt_18"
            android:textColor="#D76438"
            android:textSize="@dimen/pro1_height" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/txt_25"
            android:gravity="center"
            android:orientation="vertical">

            <nithra.word.game.onepiconeword.extra.MyTextView
                android:id="@+id/a1"
                android:layout_width="@dimen/maindia_butwith1"
                android:layout_height="@dimen/maindia_butwith1"
                android:background="@drawable/coin" />

            <TextView
                android:id="@+id/txt_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/pract_pading"
                android:layout_toLeftOf="@+id/switchword"
                android:gravity="center"
                android:padding="@dimen/pract_pading"
                android:text="You have earned "
                android:textColor="#000"
                android:textSize="@dimen/frame_liner_textsize" />

            <nithra.word.game.onepiconeword.extra.MyTextView
                android:id="@+id/tot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/switchword"
                android:gravity="center"
                android:padding="@dimen/pract_pading"
                android:text=""
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#D76438" />


            <nithra.word.game.onepiconeword.extra.MyTextView
                android:id="@+id/txt_exit1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/pract_pading"
                android:layout_toLeftOf="@+id/switchword"
                android:gravity="center"
                android:padding="@dimen/pract_pading"
                android:text=""
                android:textColor="#000"
                android:textSize="@dimen/frame_liner_textsize" />

            <nithra.word.game.onepiconeword.extra.MyTextView
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/wh_40"
                android:layout_marginBottom="@dimen/frame_liner_right"
                android:layout_marginTop="@dimen/pract_pading"
                android:background="@drawable/dia_done"
                android:gravity="center"
                android:text="  Back to game  "
                android:textColor="#fff"
                android:textSize="@dimen/txt_18"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>