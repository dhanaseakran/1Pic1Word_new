<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="0dp" android:top="0dp">
                <shape>
                    <solid android:color="#A8CF45" />
                    <corners android:bottomRightRadius="3dip"
                        android:topRightRadius="3dip"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!--  SHADOW LAYER -->
            <item android:right="0dp" android:top="0dp">
                <shape>
                    <solid android:color="#ffffff" />
                    <corners android:bottomRightRadius="3dip"
                        android:topRightRadius="3dip"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item  android:right="0dp" android:bottom="3dp">
                <shape>
                    <solid android:color="#A8CF45" />
                    <corners android:bottomRightRadius="3dip"
                        android:topRightRadius="3dip"/>

                </shape>
            </item>
        </layer-list>
    </item>
</selector>